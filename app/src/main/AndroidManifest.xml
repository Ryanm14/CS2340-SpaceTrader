<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="neighbors.com.spacetrader">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".SpaceTraderApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.configuration.ConfigurationActivity"
            android:label="@string/title_activity_configuration"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.market.MarketActivity"
            android:label="MarketActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".ui.pirate.PirateActivity"
            android:label="PirateActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.police.PoliceActivity"
            android:label="PoliceActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.damage.DamageActivity"
            android:label="DamageActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.universe.UniverseActivity"
            android:label="UniverseActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>